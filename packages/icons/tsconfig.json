{
  "compilerOptions": {
    "outDir": "lib",
    "module": "esnext",
    "lib": ["DOM", "ESNext"],
    "jsx": "react",
    "allowSyntheticDefaultImports": true,
    "target": "esnext",
    "noImplicitAny": true,
    "strictNullChecks": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "declaration": true,
    "declarationDir": "./",
    "moduleResolution": "node",
    "baseUrl": "./src",
    
  },
  "include": ["src", "@gxsys/foundation"],
  "exclude": ["node_modules", "lib"]
}